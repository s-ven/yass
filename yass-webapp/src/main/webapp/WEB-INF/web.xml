<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>yass : Yet Another Streaming Server</display-name>
	<description>Yet Another Streaming Server</description>
	<context-param>
		<description>Media Files Root</description>
		<param-name>org.yass.mediaFilesRoot</param-name>
		<param-value>/Users/svenduzont/Music/MUSIQUES</param-value>
	</context-param>
	<context-param>
		<description>Media Files Extensions</description>
		<param-name>org.yass.mediaFilesExtensions</param-name>
		<param-value>mp3</param-value>
	</context-param>
	<display-name>Restlet adapter</display-name>

	<!-- Restlet application class name -->
	<context-param>
		<param-name>org.restlet.application</param-name>
		<param-value>org.yass.rest.YassApplication</param-value>
	</context-param>
	<!-- Restlet adapter -->
	<servlet>
		<servlet-name>ServerServlet</servlet-name>
		<servlet-class>com.noelios.restlet.ext.servlet.ServerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServerServlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>org.yass.init.Init</listener-class>
	</listener>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<!-- Authentication and Authorization configuration -->
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Yass Authentication</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login-error.jsp</form-error-page>
		</form-login-config>
	</login-config>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Regular User Access</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
	<security-role>
		<description>Role required to see admin pages.</description>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<description>Role required to see user pages.</description>
		<role-name>user</role-name>
	</security-role>
</web-app>